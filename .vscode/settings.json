{
    "emmet.triggerExpansionOnTab": true,
    "emmet.syntaxProfiles": {
        "javascript": "jsx",
        "xml": {
            "attr_quotes": "single"
        }
    },
    "files.associations": {
        "*.js": "javascriptreact"
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/web/node_modules": true,
        "**/web/build": true, // will change frequently by build command
        "**/admin/node_modules": true
    }
}
